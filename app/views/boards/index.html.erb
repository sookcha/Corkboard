<div class="container-fluid">
    <h1>Corkboard.</h1>

  <div class="row-fluid">
    <div class="span2">
            <div class="container-login">
  <div class='well'>

      <% if !current_user %>
            <%= render :template => 'sessions/new' %>
<% end %>
<% if current_user %>
<% if current_user.admin%>
<%= link_to 'Logout', :controller => "sessions" , :action => 'destroy', method: :delete %>
|
<%= link_to 'Management', 'system-manage' %>

<p><%= current_user.name %></p>

<% else %>
<% end %>
<%if !current_user.admin%>
<%= link_to 'Logout', :controller => "sessions" , :action => 'destroy', method: :delete %>
<% end %>
<% end %>
</div>
</div>

      <div class='well'>
   <ul class="nav nav-list">
  <li class="nav-header">
    Boards
  </li>
  <% @boards.each do |board| %>
  <li>
  <%= link_to board.name, :controller => "boards", :board => board.id %>
  
</li>
  <% end %>
</ul>
</div>
    </div>
    <div class="span10">
<p id="notice"><%= notice %></p>
<p>
  <%= @board.name %>
</p>

<h3>Posts</h3>
<table class='table'>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Author</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= link_to post.title,post %></td>
    <td><%= post.author %></td>
  </tr>
<% end %>
</table>
        <% if current_user %>
        <p><%= link_to "New Post", :controller => "posts", :action => 'new', :board => @board.id %></p>
        <% end %>
</div>    </div>
  </div>
</div>